<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_background_image"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="580dp"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="10dp"
        app:cardElevation="9dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image_profile"
                android:src="@drawable/profile"
                android:onClick="saveData"
                android:layout_width="130dp"
                android:layout_height="150dp"/>
            <TextView
                android:id="@+id/user_name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="User Name"
                android:textSize="28sp"
                android:layout_gravity="center_horizontal"
                android:textColor="#FF9800"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:focusable="false"
                        android:textColorHint="#FF9800"
                        android:hint="E-mail">

                        <EditText
                            android:id="@+id/email_user_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" temp@temp.com"
                            android:focusable="false"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:drawableStart="@drawable/profile_email"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:focusable="false"
                        android:textColorHint="#FF9800"
                        android:hint="User Name">

                        <EditText
                            android:id="@+id/name_user_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" Ramchandani kartik"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:drawableStart="@drawable/user_name_profile"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:focusable="false"
                        android:textColorHint="#FF9800"
                        android:hint="User Id">

                        <EditText
                            android:id="@+id/user_id_user_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="11"
                            android:drawableStart="@drawable/student_enrollment_no"
                            android:focusable="false"
                            android:maxEms="1"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:focusable="false"
                        android:textColorHint="#FF9800"
                        android:hint="Address">

                        <EditText
                            android:id="@+id/address_user_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/address"
                            android:gravity="center_horizontal"
                            android:inputType="textPostalAddress"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:focusable="false"
                        android:textColorHint="#FF9800"
                        android:hint="Contact Number">

                        <EditText
                            android:id="@+id/contact_user_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:drawableStart="@drawable/profile_phone"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:inputType="number"
                            android:textSize="20sp" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:focusable="false"
                        android:textColorHint="#FF9800"
                        android:hint="User Type">

                        <EditText
                            android:id="@+id/user_type_user_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Student"
                            android:drawableStart="@drawable/user_type"
                            android:focusable="false"
                            android:maxEms="1"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/institue_name_user_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:focusable="false"
                        android:textColorHint="#FF9800"
                        android:hint="Institute name">

                        <EditText
                            android:id="@+id/student_institute_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="GPG"
                            android:drawableStart="@drawable/student_institute"
                            android:focusable="false"
                            android:maxEms="1"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/student_enrollment_user_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:focusable="false"
                        android:textColorHint="#FF9800"
                        android:hint="Enrollment No">

                        <EditText
                            android:id="@+id/student_Enrollment_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="186230307547"
                            android:drawableStart="@drawable/student_enrollment_no"
                            android:focusable="false"
                            android:maxEms="1"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/update_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:onClick="upload_data_to_db"
        android:textStyle="bold"
        android:backgroundTint="#FF9800"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>